import random  # Para usar n√∫meros aleat√≥rios

# Pontos de vida
vida_jogador = 10
vida_computador = 10

print("=== JOGO DE BATALHA ===")
print("Voc√™ tem dois ataques:")
print("1 - Cabe√ßada (Poder 4, causa 3 de dano e recebe 1)")
print("2 - Soco (Poder aleat√≥rio de 1 a 6, dano aleat√≥rio de 1 a 6)")

# Enquanto ningu√©m estiver com vida 0
while vida_jogador > 0 and vida_computador > 0:
    print("\nSua vida:", vida_jogador, "| Vida do computador:", vida_computador)

    # Escolha do jogador
    escolha = input("Escolha seu ataque (1 - Cabe√ßada, 2 - Soco): ")

    if escolha == "1":
        poder_jogador = 4
        dano_jogador = 3
        dano_extra = 1  # dano que voc√™ toma mesmo ganhando
    elif escolha == "2":
        poder_jogador = random.randint(1, 6)
        dano_jogador = random.randint(1, 6)
        dano_extra = 0
    else:
        print("Escolha inv√°lida. Tente novamente.")
        continue

    # Ataque do computador (sempre usa soco aleat√≥rio)
    poder_computador = random.randint(1, 6)
    dano_computador = random.randint(1, 6)

    print(f"Seu poder: {poder_jogador} | Poder do computador: {poder_computador}")

    # Verifica quem vence o turno
    if poder_jogador > poder_computador:
        print(f"Voc√™ venceu o turno e causou {dano_jogador} de dano!")
        vida_computador -= dano_jogador
        vida_jogador -= dano_extra  # se usou cabe√ßada, perde 1 de vida
        if dano_extra > 0:
            print("Voc√™ se machucou um pouco com a cabe√ßada e perdeu 1 de vida.")
    elif poder_computador > poder_jogador:
        print(f"Computador venceu o turno e causou {dano_computador} de dano!")
        vida_jogador -= dano_computador
    else:
        print("Empate! Ningu√©m atacou.")

# Fim do jogo
print("\n=== FIM DE JOGO ===")
if vida_jogador <= 0 and vida_computador <= 0:
    print("Empate! Os dois ca√≠ram juntos!")
elif vida_jogador <= 0:
    print("Voc√™ perdeu! üò¢")
else:
    print("Voc√™ venceu! üéâ")
