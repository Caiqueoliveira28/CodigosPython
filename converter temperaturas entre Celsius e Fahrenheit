# Mostra as opções
print("1 - Converter Celsius para Fahrenheit")
print("2 - Converter Fahrenheit para Celsius")

# Pede a escolha do usuário
opcao = input("Escolha a opção (1 ou 2): ")

# Se escolher 1, converte Celsius para Fahrenheit
if opcao == "1":
    celsius = float(input("Digite a temperatura em Celsius: "))
    fahrenheit = (celsius * 9/5) + 32
    print(f"{celsius:.1f}°C é igual a {fahrenheit:.1f}°F")

# Se escolher 2, converte Fahrenheit para Celsius
elif opcao == "2":
    fahrenheit = float(input("Digite a temperatura em Fahrenheit: "))
    celsius = (fahrenheit - 32) * 5/9
    print(f"{fahrenheit:.1f}°F é igual a {celsius:.1f}°C")

# Caso digite algo diferente
else:
    print("Opção inválida. Tente novamente.")
